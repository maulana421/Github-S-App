<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Githubs" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/my_color</item>
        <item name="colorPrimaryVariant">@color/my_color</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.SplashScreen" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/my_color</item>
        <item name="colorPrimaryVariant">@color/my_color</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Text Main(Untuk Teks Utama) -->
    <style name="AppTheme.TextMain" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="color">@color/black</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Text Untuk Title -->
    <style name="AppTheme.TextTitle" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="color">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--Text Desc (Untuk teks keterangan seperti lokasi,company)-->
    <style name="AppTheme.TextDesc" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="color">@color/black</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!--    Text Splash-->
    <style name="AppTheme.TextSplash" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>